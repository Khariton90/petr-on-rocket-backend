{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@shared-types/shared-types/(.*)": "<rootDir>/../libs/shared-types/src/$1",
    "@shared-types/shared-types": "<rootDir>/../libs/shared-types/src",
    "@core/core/(.*)": "<rootDir>/../libs/core/src/$1",
    "@core/core": "<rootDir>/../libs/core/src"
  }
}